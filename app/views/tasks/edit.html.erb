<div class='main'>
  <div class='title'>
    <h2>Update Task</h2>
  </div>

  <% if @task.errors.any? %>
    <div id="error_explanation" class='validation'>
      <h2>
        <%= pluralize(@task.errors.count, "error") %>
        prohibited this task from being saved:
      </h2>
      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for(@task) do |f| %>
    <label>Task Name</label><br>
    <%= f.text_field :name, autofocus: true, :required => 'required' %><br>
    <br>

    <label>Start Time</label><br>
    <%= f.datetime_local_field :start, autofocus: true %><br>
    <br>

    <label>Due Time</label><br>
    <%= f.datetime_local_field :due, autofocus: true %><br>
    <br>

    <label>Description</label><br>
    <%= f.text_area :description, autofocus: true %><br>
    <br>

    <%= f.submit "UPDATE" %>
  <% end %>
    <%= button_to "DISCARD", task_path(@task), method: "get", data: { confirm: "Would you like to discard your change?"} %>
</div>
