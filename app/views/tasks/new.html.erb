<div class='main'>
  <div class='title'>
    <h2>Create New Task</h2>
  </div>
  <% if @task.errors.any? %>
    <div id="error_explanation" class='validation'>
      <h5>
        <%= pluralize(@task.errors.count, "error") %>
        prohibited this task from being saved:
      </h5>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for(@task) do |f| %>
    <label>Task Name</label><br>
    <%= f.text_field :name, autofocus: true, :required => 'required' %><br>
    <br>

    <label>Start Time</label><br>
    <%= f.datetime_field :start, autofocus: true %><br>
    <br>

    <label>Due Time</label><br>
    <%= f.datetime_field :due, autofocus: true %><br>
    <br>

    <label>Description</label><br>
    <%= f.text_area :description, autofocus: true %><br>
    <br>
    
    <%= f.submit "CREATE" %>
  <% end %>
  <%= button_to "DISCARD", tasks_path, method: "get" %>
</div>
