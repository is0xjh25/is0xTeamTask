<div class='main'>
  <div class='title'>
    <h1>All Members</h1>
  </div>
  <div class='main-left tableFixHead'>
    <table>
      <thead>
        <tr>
          <th>#</th>
          <th>NAME</th>
          <th>TASKS HAVING</th>
          <th>MORE</th>   
        </tr>
      </thead>
      <tbody>
      <% @members.each do |member| %>
        <tr>
          <td><%= member.id %></td>
          <td><%= member.to_s %></td>
          <td><%= Participant.count_tasks(member) %></td>
          <td><%= link_to "DETAILS", member_path(member) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class='main-right'>
    <b><%= link_to "+ New Member", new_member_path %></b>
  </div>
</div>